<table class="tables">
        <thead>
            <tr>
                <th class="admin"><h3>ID</h3></th>
                <th class="admin"><h3>Title</h3></th>
                <th class="admin"><h3>Author</h3></th>
                <th class="admin"><h3>Edit</h3></th>
                <th class="admin"><h3>Delete</h3></th>
            </tr>
        </thead>
        <tbody>
            <% Books.forEach(Books => 
                { %>
                    <tr>
                        <td class="admin"><a href="./books/<%- Books.id %>"><%- Books.id %></a></td>
                        <td class="admin"><a href="./books/<%- Books.id %>"><%- Books.name %></a></td>
                        <td class="admin"><a href="./books/<%- Books.id %>"><%- Books.author %></a></td>
                        <td class="admin"><button onclick="document.location='./edit/<%- Books.id %>'"><i class="fa fa-edit"></i></button></td>
                        <td class="admin"><button onclick="if(confirm('Are you sure you want to delete this book?')){document.location='./books/<%- Books.id %>/delete?_method=DELETE'}else{return false;};"><i class="fa fa-trash"></i></button></td>
                    </tr>
                <% });  
            %>
        </tbody>
    </table>
</div>